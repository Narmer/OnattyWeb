mixin navigation(path)
  nav(class="navbar navbar-inverse" role="banner")
    .container
      .navbar-header
        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(class="navbar-brand" href=path+"index.html"): img(src=path+"images/logo.png" alt="logo")

      .collapse.navbar-collapse.navbar-right
        ul.nav.navbar-nav
          li.active: a(href=path+"index.html") Accueil
          li: a(href=path+"#horaires") Horaires
          li: a(href=path+"evenements.html") Evènements
          li: a(href=path+"#pricing-plan") Prestations
          li: a(href=path+"#recent-works") Réalisations
